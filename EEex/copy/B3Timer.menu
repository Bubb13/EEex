
menu
{
	name "B3Timer_Menu"
	ignoreesc

	-- The engine won't change the cursor type over templates if there isn't at
	-- least one "normal" element that occupies an xy of equal or greater value.
	label
	{
		area 0 0 2147483647 2147483647
		enabled "B3Timer_Private_Menu_Tick()"
	}

	template
	{
		label
		{
			enabled "B3Timer_Private_Menu_TEMPLATE_Background_Enabled()"
			bam "B3TBACKG"
			scaleToClip
		}
		name "B3Timer_Menu_TEMPLATE_Background"
	}

	template
	{
		label
		{
			enabled "B3Timer_Private_Menu_TEMPLATE_TimerModal_Enabled()"
			bam "B3TMODAL"
			scaleToClip
			frame lua "B3Timer_Private_Menu_TEMPLATE_TimerModal_Frame()"
		}
		name "B3Timer_Menu_TEMPLATE_TimerModal"
	}

	template
	{
		label
		{
			enabled "B3Timer_Private_Menu_TEMPLATE_TimerContingency_Enabled()"
			bam "B3TCONTI"
			scaleToClip
			frame lua "B3Timer_Private_Menu_TEMPLATE_TimerContingency_Frame()"
		}
		name "B3Timer_Menu_TEMPLATE_TimerContingency"
	}

	template
	{
		label
		{
			enabled "B3Timer_Private_Menu_TEMPLATE_TimerCast_Enabled()"
			bam "B3TAURA"
			scaleToClip
			frame lua "B3Timer_Private_Menu_TEMPLATE_TimerCast_Frame()"
		}
		name "B3Timer_Menu_TEMPLATE_TimerCast"
	}
}
