
menu
{
	name "EEex_Options"
	ignoreEsc
	modal

	-- The engine won't change the cursor type over templates if there isn't at
	-- least one "normal" element that occupies an xy of equal or greater value.
	label
	{
		area 0 0 2147483647 2147483647
		-- opacity ticks right before the menu is rendered, and is better than
		-- `enabled`, since `enabled` is run in various contexts that might
		-- disrupt tick routines that expect a steady tick rate.
		opacity lua "EEex_Options_Private_Tick()"
	}

	label
	{
		name "EEex_Options_Background"
		rectangle 0
	}

	button
	{
		name "EEex_Options_Exit"
		area 0 0 201 42
		on escape
		action "EEex_Options_Close()"
		bam "GUIOSTLM"
		text "Exit"
		text style "button"
	}

	list
	{
		column
		{
			width 100
			label
			{
				area 0 0 -1 36
				text lua "EEex_Options_Private_Tabs[rowNumber].name"
				text style "normal"
				text align left center
			}
		}

		name "EEex_Options_Sidebar"
		action "EEex_Options_Private_MainVerticalTabArea:_onTabSelected(EEex_Options_Private_CurrentTab)"
		actionAlt "EEex_Options_Private_MainVerticalTabArea:_onTabSelected(EEex_Options_Private_CurrentTab)"
		rowheight 36
		scrollbar "GUISCRC"
		table "EEex_Options_Private_Tabs"
		var "EEex_Options_Private_CurrentTab"
	}
}

menu
{
	name "EEex_Options_Templates"

	template
	{
		text
		{
			enabled "EEex_Options_Private_TEMPLATE_DelayIcon_Enabled()"
			bam "X-DELAY"
			tooltip "Requires Restart"
			scaleToClip
		}
		name "EEex_Options_TEMPLATE_DelayIcon"
	}

	template
	{
		edit
		{
			enabled true
			action "return EEex_Options_Private_TEMPLATE_Edit_Action()"
			maxlines 1
			text style "edit"
		}
		name "EEex_Options_TEMPLATE_Edit"
	}

	template
	{
		text
		{
			enabled true
			fill 112 111 111 64
			action "EEex_Options_Private_TEMPLATE_EditBackground_Action()"
			actionAlt "EEex_Options_Private_TEMPLATE_EditBackground_Action()"
		}
		name "EEex_Options_TEMPLATE_EditBackground"
	}

	template
	{
		text
		{
			enabled true
			action "EEex_Options_Private_TEMPLATE_KeybindBackground_Action()"
			actionAlt "EEex_Options_Private_TEMPLATE_KeybindBackground_Action()"
			fill lua "EEex_Options_Private_TEMPLATE_KeybindBackground_Fill()"
			text lua "EEex_Options_Private_TEMPLATE_KeybindBackground_Text()"
			text style "normal"
			text align left center
			pad 3 3 3 3
		}
		name "EEex_Options_TEMPLATE_KeybindBackground"
	}

	template
	{
		button
		{
			enabled true
			action "EEex_Options_Private_TEMPLATE_KeybindButton_Action()"
			actionAlt "EEex_Options_Private_TEMPLATE_KeybindButton_Action()"
			bam "X-KEYBND"
			tooltip lua "EEex_Options_Private_TEMPLATE_KeybindButton_Tooltip()"
			sequence lua "EEex_Options_Private_TEMPLATE_KeybindButton_Sequence()"
			scaleToClip
		}
		name "EEex_Options_TEMPLATE_KeybindButton"
	}

	template
	{
		button
		{
			enabled true
			action "EEex_Options_Private_TEMPLATE_KeybindButtonUpDown_Action()"
			actionAlt "EEex_Options_Private_TEMPLATE_KeybindButtonUpDown_Action()"
			bam "X-KEYBND"
			tooltip lua "EEex_Options_Private_TEMPLATE_KeybindButtonUpDown_Tooltip()"
			sequence lua "EEex_Options_Private_TEMPLATE_KeybindButtonUpDown_Sequence()"
			scaleToClip
		}
		name "EEex_Options_TEMPLATE_KeybindButtonUpDown"
	}

	template
	{
		label
		{
			enabled true
			text lua "EEex_Options_Private_TEMPLATE_Text_Text()"
			text style "normal"
			text useFontZoom 0
		}
		name "EEex_Options_TEMPLATE_Text"
	}

	template
	{
		button
		{
			enabled true
			action "EEex_Options_Private_TEMPLATE_Toggle_Action()"
			bam "ROUNDBUT"
			frame lua "EEex_Options_Private_TEMPLATE_Toggle_Frame()"
			scaleToClip
		}
		name "EEex_Options_TEMPLATE_Toggle"
	}

	template
	{
		label
		{
			enabled true
			fill lua "EEex_Options_Private_TEMPLATE_Separator_Fill()"
		}
		name "EEex_Options_TEMPLATE_Separator"
	}
}
